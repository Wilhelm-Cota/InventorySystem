@{
    ViewData["Title"] = "Login";
}


<div class="d-flex align-items-center justify-content-center" style="padding-top:150px">
<div class="card text-center" style="width: 30rem; height:auto" >
  <div class="card-header pt-4"><h2 class="text-info">Login</h2></div>
  <div class="card-body">
    <form asp-action="Index" method="post">
        <table>
            <tr>
                <td>UserName:</td>
                <td><span><i class="bi bi-person"></i></span><input type="text" name="userName" required /></td>
            </tr>
             <tr>
                <td>Password:</td>
                <td><span><div class=""></div><i class="bi bi-lock"></i></span><input type="password" name="password" required /></td>
            </tr>
             <tr>
                <td></td>
                <td><a asp-action="ForgetPassword">Forgot password?</a></td>
            </tr>
             <tr>
                 <td></td>
                <td><button type="submit" class="btn btn-outline-success">Login</button><span><i class="bi bi-send"></i></span></td>
            </tr>
        </table>
    </form>
  </div>
</div>
</div>
